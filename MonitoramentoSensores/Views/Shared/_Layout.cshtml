<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monitoramento de Sensores</title>

    <link href="~/Content/css/all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/base.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Hepta+Slab|Share+Tech+Mono&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container body-content">
        <div class="row">
            <div class="header">
                <img class="header-img" src="~/Imagens/Braskem.png">
                <p class="nome-sistema"> Real time monitoring system. </p>
            </div>
            @if (Session["NomeUsuario"] != null)
            {
                <div class="nav-bar">
                    <div class="box-titulo">

                    </div>
                    <div class="login-dropdown">
                        <button class="btn-dropdown">Olá, @Session["NomeUsuario"].ToString()</button>
                        <div class="dropdown-content">
                            @*<a class="dropdown-content-item" href="#">Link 1</a>
                                <a class="dropdown-content-item" href="#">Link 2</a>*@
                            <a class="dropdown-content-item" href="/Login/Sair">Sair</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        @RenderBody()
        <div class="row">
            <div class="footer">
                @*<img src="~/Imagens/footer.png">*@
                <h4 class="footer-info">Desenvolvido por equipe Trinity / Contato : engenhariatrinity@gmail.com</h4>
                <h6 class="footer-copyright">&copy; Trinity (2017 - 2019) - Desenvolvendo cada vez mais. Todos os direitos reservados.</h6>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/base.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>