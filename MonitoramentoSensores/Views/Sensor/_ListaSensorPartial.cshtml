@model List<MonitoramentoSensores.Models.Sensor.SensorModel>

@if (Model.Any())
{
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sensor in Model)
                {
                    <tr>
                        <td>@sensor.Nome</td>
                        <td>@sensor.Endereco</td>
                        <td class="text-center">
                            <a class="fa fa-copy js-duplicar-sensor margin" data-codigo="@sensor.Codigo" data-nome="@sensor.Nome" data-endereco="@sensor.Endereco" data-toggle="tooltip" data-placement="top" title="" data-original-title="Duplicar"></a>
                            <a class="fa fa-edit js-modal-editar-sensor margin" data-codigo="@sensor.Codigo" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar"></a>
                            <a class="fa fa-times js-excluir-sensor margin" data-codigo="@sensor.Codigo" data-nome="@sensor.Nome" data-endereco="@sensor.Endereco" data-toggle="tooltip" data-placement="top" title="" data-original-title="Excluir"></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div class="nenhum-registro">
        <i class="fa fa-times"></i>
        Nenhum sensor encontrado
    </div>
}